<style>
    .button {
        float: left;
        margin-top: -30px;
        height: 60px;
        font-family: LatoWeb;
        font-style: normal;
        font-weight: 600;
        font-size: 16px;
        line-height: 19px;
        border: none;
        float: right;
    }

    .green_button {
        background: #7AABA2;
        color: #FFFFFF;
        width: 232px;
    }

    @@media (min-width: 671px) {
        .green_button {
            margin-right: 50px;
        }
    }

    @@media (max-width: 670px) {
        .green_button {
            width: 250px;
            margin-right: calc(50vw - 125px - 20px);
        }
    }

    .white_button {
        width: 249px;
        background: white;
        color: black;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.15);
        margin-right: 50px;
        margin-top: -30px;
    }

    @@media (min-width: 671px) {
        .white_button {
            margin-right: 50px;
        }
    }

    @@media (max-width: 670px) {
        .white_button {
            display: block;
            width: 250px;
            margin-top: 20px;
            margin-right: calc(50vw - 125px - 20px);
        }
    }

    @@media (min-width: 1440px) {
        .content {
            height: calc(570px + (100vw - 1440px) * (650 - 570) / 480);
        }
    }

    .footer {
        margin-top: 20px;
    }

    .big_text_div_text_page {
        margin-bottom: 0px;
    }
</style>

